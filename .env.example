# Binance API Configuration
# Get your API keys from: https://www.binance.com/en/my/settings/api-management
BINANCE_API_KEY=your_api_key_here
BINANCE_API_SECRET=your_api_secret_here

# Trading Configuration
# Set to "true" for Binance Futures Testnet (recommended for testing)
# Set to "false" for live trading (use with caution!)
USE_TESTNET=true

# Capital allocation per leg in USDT
CAPITAL_PER_LEG=20000

# Maximum leverage (1-3x recommended for market-neutral strategies)
MAX_LEVERAGE=3

# Copula trading thresholds
# Entry threshold: paper's best performer is 0.20 (Sharpe 3.77, 205.9% total return over 2.75 years)
# Tested values: 0.10, 0.15, 0.20 - higher values = fewer but higher-quality trades
ENTRY_THRESHOLD=0.20

# Exit threshold (0.10 = within 10% of median, paper uses 0.10)
EXIT_THRESHOLD=0.10

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/trading.log
LOG_MAX_BYTES=10485760
LOG_BACKUP_COUNT=5

# State persistence
STATE_FILE=state/state.json

# Telegram Notifications (optional)
# Get bot token from @BotFather on Telegram
# Get chat ID by messaging @userinfobot on Telegram
TELEGRAM_BOT_TOKEN=your_bot_token_here
TELEGRAM_CHAT_ID=your_chat_id_here

# Scheduler Configuration (UTC times)
# Formation runs every Monday at 00:00 UTC
FORMATION_DAY_OF_WEEK=mon
FORMATION_HOUR=0
FORMATION_MINUTE=0

# Trading interval in minutes (paper's best results use 5-min: 205.9% vs 75.2% with hourly)
TRADING_INTERVAL_MINUTES=5

# Altcoin universe (comma-separated, no spaces)
# From paper Table 1: 20 USDT-Margined Futures Contracts (excluding BTCUSDT which is the reference asset)
ALTCOINS=ETHUSDT,BCHUSDT,XRPUSDT,EOSUSDT,LTCUSDT,TRXUSDT,ETCUSDT,LINKUSDT,XLMUSDT,ADAUSDT,XMRUSDT,DASHUSDT,ZECUSDT,XTZUSDT,ATOMUSDT,BNBUSDT,ONTUSDT,IOTAUSDT,BATUSDT

# Formation period in days
FORMATION_DAYS=21

# Trading period in days
TRADING_DAYS=7

